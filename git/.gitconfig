[user]
    name = Leandro Ostera
    email = me@leostera.com

[github]
    user = ostera

[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    filemode = false
    trustctime = false

[alias]
    A = add -A
    ammend = commit --amend
    b = branch
    c = commit
    ca = commit -a
    cam = commit -am
    cb = checkout -b
    cm = commit -m
    co = checkout
    cod = checkout development
    com = checkout master
    d = diff
    dh = diff HEAD
    pod = push origin development
    pom = push origin master
    s = status
    sl = shortlog
    unstage = reset --hard HEAD

[color]
    ui = auto

[color "branch"]
    current = green
    local = blue
    remote = yellow

[color "diff"]
    new = green
    old = red
    frag = magenta
    meta = blue

[color "status"]
    added = green bold
    removed = red
    changed = green
    untracked = cyan

[credential]
    helper = osxkeychain

[difftool]
    prompt = false

[mergetool]
    prompt = false

[push]
    default = simple

[diff]
    renames = copies


