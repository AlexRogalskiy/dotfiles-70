alias q="exit"

alias g="git"
alias gs="g s"
alias clone="g clone"

alias v="vim"
alias vd="vim ."

alias d="docker"
alias dm="docker-machine"

alias m="make"

alias j="jobs"
alias f="fg"
alias b="bg"
alias tm="tmux"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"
alias repos="cd ~/repos"

alias l="ls -l"
alias la="ls -al"

alias va="vagrant"
alias vup="vagrant up"
alias vsh="vagarnt ssh"

for level in {1..9}; do
  tree="tree -C -L ${level}";
  t=$(repeat ${level} echo -n "t");
  eval "alias ${t}='${tree}'";
  eval "alias t${level}='${tree}'";
done

alias reload="source ~/.zshrc"
alias vimrc="vim ~/.vimrc"
alias vundlerc="vim ~/.vim/vundle.vim"
alias zshrc="vim ~/.zshrc ; reload"
alias dotfiles="cd ~/repos/dotfiles"
alias gitconf="vim ~/.gitconfig"

alias pipit="pip install -r requirements.txt"
alias srv="python -m SimpleHTTPServer"
alias py="python"

alias swank="sbcl --load ~/.vim/slime/start-swank.lisp"

alias rb="ruby"

for release in {16..19}; do
  p="${HOME}/.kerl/erlang/r${release}";
  eval "alias r${release}='. ${p}/activate'";
  eval "export ERL${release}=${p}";
done
